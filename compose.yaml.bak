version: '3.8'

services:
    app:
        build:
            context: .
            dockerfile: Dockerfile
        ports:
            - "8080:80"
        volumes:
            - .:/var/www/html
        depends_on:
            - database

    phpmyadmin:
        image: phpmyadmin:latest
        container_name: phpmyadmin
        restart: always
        environment:
            PMA_HOST: database
            PMA_USER: ecoride
            PMA_PASSWORD: 'ePStl]LoOamt8dZ2'
        ports:
            - "8081:80"
        depends_on:
            - database
    database:
        image: 'mysql:latest'
        restart: always
        environment:
            MYSQL_ROOT_PASSWORD: root
            MYSQL_DATABASE: ecoride
            MYSQL_USER: ecoride
            MYSQL_PASSWORD: 'ePStl]LoOamt8dZ2'
        volumes:
            - mysql_data:/var/lib/mysql
        ports:
            - "3307:3306"

volumes:
    mysql_data: